# FreeRADIUS Production Configuration
# Copy this file to .env and fill in the values
# DO NOT COMMIT .env FILE TO GIT!

# Database Configuration
RADIUS_DB_NAME=radius
RADIUS_DB_USER=radius
RADIUS_DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# MariaDB Root Password
MARIADB_ROOT_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Mikrotik IPs (comma-separated, no spaces)
# Example: MIKROTIK_IPS=192.168.1.1,192.168.1.2,10.0.0.5
MIKROTIK_IPS=

# RADIUS Ports (usually no need to change)
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813

# Backup Configuration
BACKUP_DIR=/var/backups/freeradius
RETENTION_DAYS=30

# Billing Server Configuration (if needed)
BILLING_DB_USER=billing
BILLING_DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
BILLING_DB_HOST=localhost

